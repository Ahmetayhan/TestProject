<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th class= "col-md-2">name</th>
      <th class= "col-md-2">code</th>
      <th class= "col-md-1">vehicle_class</th>
      <th class= "col-md-1">brand</th>
      <th class= "col-md-1">model</th>
      <th class= "col-md-1">model_year</th>
      <th class= "col-md-1">fuel_capacity</th>
      <th class= "col-md-1">fuel_type</th>
      <th class= "col-md-1">status</th>
    </tr>
  </thead>
  <hr>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.code %></td>
        <td><%= vehicle.vehicle_class %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.model_year %></td>
        <td><%= vehicle.fuel_capacity %></td>
        <td><%= vehicle.fuel_type %></td>
        <td><%= vehicle.status %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><hr>

